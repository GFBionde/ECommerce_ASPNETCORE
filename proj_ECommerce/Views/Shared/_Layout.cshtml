<!-- 
    Principal template do site. Inclui o header e navbar! 
-->

<!DOCTYPE html>
    <html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Área Dinâmica que carregará o Title da página.. -->
        <title>@ViewData["Title"] - E-Commerce</title>

        <!-- ######### STYLES ######### -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
        <link rel="stylesheet" href="~/template/fonts/icomoon/style.css">

        <link rel="stylesheet" href="~/template/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/template/css/magnific-popup.css">
        <link rel="stylesheet" href="~/template/css/jquery-ui.css">
        <link rel="stylesheet" href="~/template/css/owl.carousel.min.css">
        <link rel="stylesheet" href="~/template/css/owl.theme.default.min.css">

        <link rel="stylesheet" href="~/template/css/aos.css">

        <link rel="stylesheet" href="~/template/css/style.css">

        <link href="~/template/plugins/toastr/toastr.min.css" rel="stylesheet" />

        <!-- Área Dinâmica que irá carregar o CSS/StyleSheet da página. -->
        @RenderSection("styles", false)
    </head>
    <body>

        <div class="site-wrap">

            <!-- ##### HEADER ##### -->
            <header class="site-navbar" role="banner">
                <!-- Pesquisar, Logotipo, Login e Carrinho -->
                <div class="site-navbar-top">
                    <div class="container">
                        <div class="row align-items-center">

                            <!-- Pesquisar -->
                            <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
                                <form action="" class="site-block-top-search">
                                    <span class="icon icon-search2"></span>
                                    <input type="text" class="form-control border-0" placeholder="Pesquisar">
                                </form>
                            </div>

                            <!-- Logotipo -->
                            <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
                                <div class="site-logo">
                                    <a href="~/Default" class="js-logo-clone">Shoppers</a>
                                </div>
                            </div>

                            <div class="col-6 col-md-4 order-3 order-md-3 text-right">
                                <div class="site-top-icons">
                                    <ul>
                                        <!-- Login -->
                                        <li><a href="/Login"><span class="icon icon-person"> Conta </span></a></li>

                                        <!-- Carrinho -->
                                        <li>
                                            <a href="/Carrinho" class="site-cart">
                                                <span class="icon icon-shopping_cart">Carrinho</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Menus de Navegação -->
                <nav class="site-navigation text-right text-md-center" role="navigation">
                    <div class="container">
                        <ul class="site-menu js-clone-nav d-none d-md-block">
                            <li><a href="/Default">Inicio</a></li>

                            <!-- Menu com Dropdown-->
                            <li class="has-children active">
                                <a href="#">Categorias</a>
                                <ul class="dropdown">
                                    <li><a href="#">Feminino</a></li>
                                    <li class="has-children">
                                        <a href="#">Masculino</a>
                                        <ul class="dropdown">
                                            <li><a href="#">Camisetas</a></li>
                                            <li><a href="#">Calças</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>

                            <li><a href="#">Promoções</a></li>
                            <li><a href="#">Contato</a></li>
                        </ul>
                    </div>
                </nav>
            </header>

            <!-- ##### MAIN ##### -->
            <!-- Área Dinâmica que carregará o Body. -->
            @RenderBody()
                

            <!-- ##### FOOTER ##### -->
            <footer class="site-footer border-top">
                <div class="container">
                    <div class="row">

                        <!-- ##### LINKS ##### -->
                        <div class="col-lg-6 mb-5 mb-lg-0">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 class="footer-heading mb-4">Explorar</h3>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <ul class="list-unstyled">
                                        <li><a href="/Carrinho">Carrinho de Compras</a></li>
                                        <li><a href="#">Promoções</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- ##### INFO DE CONTATO ##### -->
                        <div class="col-md-6 col-lg-3">
                            <div class="block-5 mb-5">
                                <h3 class="footer-heading mb-4">Informações de Contato</h3>
                                <ul class="list-unstyled">
                                    <li class="address">Rua Legal 300. Bairro Bonito, Regente Feijó, São Paulo, Brasil.</li>
                                    <li class="phone"><a href="tel://5518996200779">+55 (18) 9 9620-0779</a></li>
                                    <li class="email">enderecoemail@dominio.com</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- ##### COPYRIGHT ##### -->
                    <div class="row pt-5 mt-5 text-center">
                        <div class="col-md-12">
                            <p>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script>
                                All rights reserved |
                                This template is made with <i class="icon-heart" aria-hidden="true"></i>
                                by <a href="https://colorlib.com" target="_blank" class="text-primary">Colorlib</a> |
                                Edited by Guilherme Ferreira Bionde

                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

        <!-- ######### SCRIPTS ######### -->
        <script src="~/template/js/jquery-3.3.1.min.js"></script>
        <script src="~/template/js/jquery-ui.js"></script>
        <script src="~/template/js/owl.carousel.min.js"></script>
        <script src="~/template/js/jquery.magnific-popup.min.js"></script>
        <script src="~/template/js/aos.js"></script>
        <script src="~/template/js/main.js"></script>

        <script src="~/template/plugins/toastr/toastr.min.js"></script>
        <script src="~/js/HTTPClient.js"></script>

        <!-- Área Dinâmica que receberá os Scripts.. -->
        @RenderSection("scripts", required: false)
    </body>
</html>
