<!-- View index do Login/Pág. de Autenticação! -->
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- O CSS deve ser importado/escrito aqui dentro!-->
@section styles{
    <style>
        #form-login {
            width: 40%;
            margin: 0 auto;
            margin-top: 5%;
            margin-bottom: 10%;
        }
    </style>
}

<!-- Os scripts devem ser importados/escritos aqui dentro! -->
@section scripts{
    <script src="~/js/Views/Login/Index.js"></script>
}

<!-- HTML Dinâmico -->

<!-- Form de Login, chama a função Logar, do Controller Login. -->
<div id="form-login">
    <h4 style="text-align:center;">Acessar sua conta</h4>
    <br />

    <!-- E-mail -->
    <div class="form-group">
        <label for="emailLogin">Endereço de e-mail:</label>
        <input type="email" class="form-control" id="inpEmail" placeholder="Ex: frodo@terramedia.com">
        <small id="emailHelp" class="form-text text-muted">*Seu e-mail precisa conter '@@' e '.' para ser válido.</small>
    </div>

    <!-- Senha -->
    <div class="form-group">
        <label for="senhaLogin">Senha:</label>
        <input type="password" class="form-control" id="inpSenha">
        <small id="senhaHelp" class="form-text text-muted">*Sua senha é secreta, nunca a compartilhe.</small>
    </div>

    <!-- Mensagens de feedback.. -->
    <div id="divMsg" style="display: none; text-align: center;"
         class="mt-3 alert alert-danger">
    </div>

    <input type="button" class="btn btn-primary btn-block" value="Entrar" onclick="index.logar()" />
</div>
